<!DOCTYPE html>
<html lang="en" {{- if not .Session}}class="anon"{{end}}>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Victoria Makerspace member website">
    <link rel="apple-touch-icon" href="/logo-square-plain-192.png">
    <link rel="icon" type="image/png" sizes="192x192"  href="/logo-square-plain-192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <title>{{if .Title}}{{.Title}} - {{end}}Victoria Makerspace</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <link rel="stylesheet" href="/fonts/fonts.css">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
{{if .Session}}
  <nav class="navbar navbar-toggleable navbar-light fixed-top" id="navbar-member">
    <div class="container">
      <a id="talk-link" class="nav-link glyphicons glyphicons-conversation" href="{{.Talk.Path}}" title="Talk forum"></a>
      <a id="ms-menu-toggler" class="navbar-toggler navbar-toggler-right nav-link glyphicons glyphicons-menu-hamburger" role="button" data-toggle="collapse" data-parent="#navbar-member" data-target="#ms-menu" aria-expanded="false"></a>
      <a class="member-icon nav-link{{if eq .Name "dashboard"}} active{{end}}" href="/member/dashboard" title="Dashboard">
        {{with .Member.Avatar_url 40}}
        <img src="{{.}}">
        {{else}}
        <div class="glyphicons glyphicons-user"></div>
        {{end}}
      </a>
      <a class="navbar-brand" href="/" title="Homepage">
        <img class="navbar-brand-large" src="/logo-wide-text.svg" alt="Victoria Makerspace">
        <img class="navbar-brand-small" src="/logo-square-text.svg" alt="Victoria Makerspace">
      </a>
      <div class="navbar-collapse collapse" id="ms-menu">
        <ul class="navbar-nav">
          {{if .Member.Admin}}
          <li class="nav-item">
            <a class="nav-link{{if eq .Name "admin"}} active{{end}}" href="/admin">
              <span class="glyphicons glyphicons-wrench"></span>Admin panel
            </a>
          </li>
          {{end}}
          <li class="nav-item">
            <a class="nav-link{{if eq .Name "billing"}} active{{end}}" href="/member/billing"><span class="glyphicons glyphicons-pen"></span>Billing</a>
          </li>
          <li class="nav-item">
            <a class="nav-link{{if eq .Name "member-list"}} active{{end}}" href="/member/list"><span class="glyphicons glyphicons-group"></span>Members</a>
          </li>
          <!--<li class="nav-item">
            <a class="nav-link{{if eq .Name "tools"}} active{{end}}" href="/tools"><span class="glyphicons glyphicons-claw-hammer"></span>Tools</a>
          </li>-->
          <li class="nav-item">
            <a class="nav-link{{if eq .Name "storage"}} active{{end}}" href="/member/storage"><span class="glyphicons glyphicons-cargo"></span>Storage</a>
          </li>
          <li class="nav-item">
            <a class="nav-link{{if eq .Name "account"}} active{{end}}" href="/member/account"><span class="glyphicons glyphicons-cogwheel"></span>Account</a>
          </li>
          <li class="nav-item" id="sign-out">
            <form action="/sso/sign-out" method="post">
              <label>Sign out
                <button name="sign-out" type="submit" value="{{.Member.Id}}" class="nav-link glyphicons glyphicons-exit"></button>
              </label>
            </form>
          </li>
        </ul>
      </div>
    </div>
  </nav>
{{else}}
  <nav class="navbar navbar-toggleable-sm navbar-light fixed-top" id="navbar-guest">
    <div class="container">
      <a class="navbar-toggler navbar-toggler-right nav-link glyphicons glyphicons-menu-hamburger" role="button" data-toggle="collapse" data-target="#navbar-guest .navbar-collapse" aria-expanded="false" aria-label="Toggle navigation"></a>
      <a class="navbar-brand" href="/">
        <img src="/logo-wide-text.svg" alt="Victoria Makerspace">
      </a>
      <div class="navbar-collapse collapse justify-content-end">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="{{.Talk.Path}}"><span class="glyphicons glyphicons-conversation"></span>talk</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{if ne .Name "index"}}/{{end}}#shop-features"><span class="glyphicons glyphicons-hand-saw"></span>shop features</a>
          </li>
          <!--<li class="nav-item">
            <a class="nav-link{{if eq .Name "tools"}} active{{end}}" href="/tools"><span class="glyphicons glyphicons-claw-hammer"></span>tools</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/classes"><span class="glyphicons glyphicons-book-open"></span> classes</a>
          </li>-->
          <li class="nav-item">
            <a class="nav-link{{if eq .Name "join"}} active{{end}}" href="/join"><span class="glyphicons glyphicons-user-add"></span>join</a>
          </li>
          <li class="nav-item">
            <a class="nav-link{{if eq .Name "sso"}} active{{end}}" href="/sso"><span class="glyphicons glyphicons-log-in"></span>sign in</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
{{end}}
