  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-10 col-xl-8">
        <h4 class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            All
          </button>
          <div class="dropdown-menu">
            <a class="dropdown-item" href="/member/list/approved">Approved</a>
          </div>
          Members
        </h4>
{{with .Get_all_members}}
        <span class="text-muted">{{len .}} members</span>
        <table class="table table-hover text-nowrap">
          <tbody>
  {{range .}}
            <tr{{if $.Session}}{{if eq .Id $.Member.Id}} class="table-info"{{end}}{{end}}>
              <td>
                <a href="/member/{{.Id}}">
    {{with .Talk_user}}
                  <img src="{{.Avatar_url 120}}" class="rounded-circle">
    {{end}}
                  @{{.Username}}
                </a>
                {{if $.Session}}{{.Name}}{{end}}
              </td>
              <td>{{.Registered.Format "Jan 02, 2006"}}</td>
            </tr>
  {{end}}
          </tbody>
        </table>
{{else}}
        <table class="table">
          <tbody>
            <tr><td><em class="text-muted">No members.</em></td></tr>
          </tbody>
        </table>
{{end}}
      </div>
    </div>
  </div>
