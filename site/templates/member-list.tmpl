  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-10 col-xl-8">
        <h4 class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
{{with .Data.member_group}}
  {{if eq . "all"}}
            All
  {{else if eq . "active"}}
            Active
  {{else if eq . "new"}}
            New
  {{else if eq . "unapproved"}}
            Unapproved
  {{else if eq . "pending"}}
            Pending
  {{end}}
          </button>
          <div class="dropdown-menu">
            <a class="dropdown-item{{if eq . "all"}} active{{end}}" href="/member/list">All</a>
            <a class="dropdown-item{{if eq . "active"}} active{{end}}" href="/member/list/active">Active</a>
            <a class="dropdown-item{{if eq . "new"}} active{{end}}" href="/member/list/new">New</a>
  {{if $.Session}}
    {{if $.Member.Admin}}
            <a class="dropdown-item{{if eq . "unapproved"}} active{{end}}" href="/member/list/unapproved">Unapproved</a>
            <a class="dropdown-item{{if eq . "pending"}} active{{end}}" href="/member/list/pending">Pending</a>
    {{end}}
  {{end}}
{{end}}
          </div>
          Members
        </h4>
        <span class="text-muted">{{len .Data.member_list}} {{if ne .Data.member_group "all"}}{{.Data.member_group}} {{end}}members</span>
{{with .Data.member_list}}
        <table class="table table-hover text-nowrap member-list">
          <thead>
            <tr>
              <th></th>
              <th>Registered</th>
            </tr>
          </thead>
          <tbody>
  {{range .}}
            <tr{{if $.Session}}{{if eq .Id $.Member.Id}} class="table-info"{{end}}{{end}}>
              <td>
                <a href="/member/{{.Id}}" class="member-icon">
                  {{with .Avatar_url 48}}
                  <img src="{{.}}">
                  {{else}}
                  <div class="glyphicons glyphicons-user"></div>
                  {{end}}
                </a>
                <div class="flex-column mx-3">
                  <a href="/member/{{.Id}}" class="d-block">
                    @{{.Username}}
                  </a>
    {{if $.Session}}
                  <span class="small">{{.Name}}</span>
    {{end}}
                </div>
              </td>
              <td>{{.Registered.Format "Jan 02, 2006"}}</td>
            </tr>
  {{end}}
          </tbody>
        </table>
{{end}}
      </div>
    </div>
  </div>
