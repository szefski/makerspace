{{$talk_url := .Url -}}
{{with .Talk_user}}
  {{with .Profile_bg_url}}
  <div id="profile-background">
    <img src="{{.}}" alt="Profile background">
  </div>
  {{end}}
{{end}}
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7 rounded px-5 py-3" style="background: rgba(255,255,255,0.8)">
{{if not .Member.Agreed_to_terms}}
        <p class="alert alert-info">Please read and agree to the <a href="/terms">Terms and Conditions</a> before registering to become a member.</p>
{{else if not .Member.Active}}
        <p class="alert alert-info">Please set up <a href="/member/billing">billing</a> and register to become a member.</p>
{{end}}
{{with .Talk_user}}
        <h4><a href="{{$talk_url}}/users/{{.Username}}/messages" class="glyphicons glyphicons-message-full align-baseline"></a> Messages</h4>
        {{.Get_messages 5}}
{{end}}
      </div>
    </div>
  </div>
